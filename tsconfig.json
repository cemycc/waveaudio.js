{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [ "dom", "es6" ],
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
          "*": [
            "./src/*"
          ]
        }
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "dist",
        "examples"
    ]
}
